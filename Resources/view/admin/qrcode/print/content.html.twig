<div class="{{ app.request.headers.get('X-Requested-With') is not null ? 'd-none' }} d-print-block p-0 w-100">
    <div class="text-center" style="width: 320px; height: 320px;">

        <svg xmlns="http://www.w3.org/2000/svg" width="170" height="170" fill="currentColor"
             viewBox="0 10 30 30">
            {{ qrcode|striptags('<path>')|raw }}
        </svg>

        <h6 class="w-100 fw-bolder mt-3">
            # {{ item.number }}
        </h6>

        <div class="w-100">
            Количество: <strong>{{ item.quantity }} шт.</strong>
        </div>
    </div>
</div>