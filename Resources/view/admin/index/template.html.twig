<script nonce="{{ csp_nonce() }}">

/** Сокеты */

let jGGXNNcBC = 100;

setTimeout(function vwZSPXkyxD() {

    if(typeof centrifuge !== 'object')
    {
        if(jGGXNNcBC > 1000) { return; }

        jGGXNNcBC = jGGXNNcBC * 2;
        return setTimeout(vwZSPXkyxD, jGGXNNcBC);
    }

    {% if opens %}

          centrifuge.newSubscription('{{ opens.event }}').on('publication', function (ctx)
          {
            document.getElementById('product-{{ opens.event }}').innerHTML = ctx.data.product;

            $total = parseInt(document.getElementById('total-{{ opens.event }}').textContent);
            document.getElementById('total-{{ opens.event }}').textContent = $total + ctx.data.total

          }).subscribe();

    {% endif %}


    /** Удаляем из списка у всех продукт */
    centrifuge.newSubscription('remove').on('publication', function (ctx)
    {
        let $identifier = document.getElementById(ctx.data.identifier);
        if($identifier) { $identifier.remove(); }
    }).subscribe();


}, 100);

</script>



